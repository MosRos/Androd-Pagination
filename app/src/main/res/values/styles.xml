<resources>
    <style name="Widget.AS.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Widget.AS.AppBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="elevation">10dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="TextAppearance.CoinPrice" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/as_txtColorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextAppearance.PercentChance" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/as_txtColorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextAppearance.CoinSymbol" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/as_txtColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextAppearance.CoinNameSubtitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_light</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/as_txtColorSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>
</resources>